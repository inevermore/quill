@import './core'
@import './base'
@import './snow/*'
@import './snow'

iframe {
  border: none;
}
.formula-editor-container {
  visibility: hidden;
  width: 714px;
  height: 575px;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 6px;
  border: 1px solid rgba(0,0,0,.2);
  box-shadow: 0 5px 10px rgba(0,0,0,.2);
  overflow: hidden;
  background: white;

  header {
    height: 30px;
    border-bottom: 1px solid #c6c6c6;
    background: linear-gradient(to bottom, white, #f0f0f0);

    span {
      font-weight: 700;
      font-size: 12px;
      line-height: 30px;
      padding-left: 5px;
    }

    b {
      float: right;
      padding-right: 10px;
      line-height: 30px;

      &:hover {
        color: red;
        cursor: pointer;
      }
    }
  }

  iframe {
    width: 100%;
    height: calc(100% - 30px);
    background: white;
  }
}

button {
  display: block;
}

.ql-tiku {
  position: relative;
  img {
    max-width: 100%;
    min-width: 10px;
    min-height: 10px;
    border: 2px dotted #FA574B;
    vertical-align: middle;
  }
  
  .ql-editor {
    min-height: 400px;
  }

  .yk-math-img {
    border: 1px dotted #07b4fd;
  }

  .ql-image-resizer {
    display: none;
    position: absolute;
    border: 1px solid rgb(59, 119, 255);

    .ql-image-resizer-hand0 {
      cursor: nw-resize;
      transform: translate(-50%, -50%);
    }

    .ql-image-resizer-hand1 {
      cursor: n-resize;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .ql-image-resizer-hand2 {
      cursor: ne-resize;
      right: 0;
      transform: translate(50%, -50%);
    }
    .ql-image-resizer-hand3 {
      cursor: e-resize;
      right: 0;
      top: 50%;
      transform: translate(50%, -50%);
    }
    .ql-image-resizer-hand4 {
      cursor: se-resize;
      right: 0;
      bottom: 0;
      transform: translate(50%, 50%);
    }
    .ql-image-resizer-hand5 {
      cursor: s-resize;
      bottom: 0;
      left: 50%;
      transform: translate(-50%, 50%);
    }
    .ql-image-resizer-hand6 {
      cursor: sw-resize;
      bottom: 0;
      left: 0;
      transform: translate(-50%, 50%);
    }
    .ql-image-resizer-hand7 {
      cursor: w-resize;
      top: 50%;
      left: 0;
      transform: translate(-50%, -50%);
    }
    span {
      position: absolute;
      width: 6px;
      height: 6px;
      overflow: hidden;
      font-size: 0px;
      display: inline-block;
      background-color: #3C9DD0;
    }
  }

  .tk-upload-error-tips {
    position: absolute; 
    right: 4px;
    top: 4px;
    color: #b94a48;
    background-color: #f2dede;
    border: 1px solid #eed3d7;
    padding: 8px;
    border-radius: 3px;

    button {
      border: none;
      display: inline-block;
      background: none;
      padding: 0 0 0 5px;
      vertical-align: middle;
      cursor: pointer;
      outline: none;
    }

    svg {
      margin-left: 5px;
      height: 15px;
      width: 15px;

      * {
        fill: #b94a48;
      }
    }
  }
}

.ql-toolbar.ql-tiku {
  .ql-pinyin .ql-picker-label {
    padding: 0 2px;
    width: 28px;
  }

  .ql-picker-label {
    outline: none;
  }

  .ql-text-picker {
    .ql-picker-options {
      width: 122px;
      padding: 0;
    }
    .ql-picker-item {
      border: 1px solid transparent;
      float: left;
      height: 30px;
      padding: 0px;
      width: 30px;
      text-align: center;
      line-height: 30px;

      &:hover {
        background-color: #fff5d4;
        border: 1px solid #dcac6c;
        padding: 0;
      }
    }
  }

  .tk-disable-history {
    svg * {
      stroke: darkgray;
    }

    &:hover {
      .ql-stroke {
        stroke: darkgray;
      }
    }
  }
}
